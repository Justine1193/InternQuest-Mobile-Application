rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // True if the user document has is_blocked == true (students blocked by admin)
    function isBlocked(uid) {
      return exists(/databases/$(database)/documents/users/$(uid)) &&
        get(/databases/$(database)/documents/users/$(uid)).data.get('is_blocked', false) == true;
    }

    // True if the current user has an admin panel role (admin_roles doc synced by app on load)
    function isAdminPanelAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/admin_roles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admin_roles/$(request.auth.uid)).data.role in ['admin', 'super_admin', 'coordinator'];
    }

    // True if the current user is admin only (not coordinator)
    function isAdminOnly() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/admin_roles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admin_roles/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }

    // ADMIN USERS
    // Read: Allow unauthenticated read so login can look up admin by username to get firebaseEmail before sign-in.
    // Write: Require auth; if admin_roles is populated, only admin/coordinator can create/update/delete.
    // Restore operations (create with restoredAt field) require admin only.
    match /adminusers/{adminId} {
      allow read: if true;

      allow create: if request.auth != null &&
        (
          // If restoring (has restoredAt field), require admin only
          ('restoredAt' in request.resource.data) ? 
            (exists(/databases/$(database)/documents/admin_roles/$(request.auth.uid)) ? isAdminOnly() : false) :
          // Otherwise, allow admin/coordinator (backward compat if no admin_roles)
            (exists(/databases/$(database)/documents/admin_roles/$(request.auth.uid)) ? isAdminPanelAdmin() : true)
        ) &&
        !('password' in request.resource.data) &&
        !('firebasePassword' in request.resource.data);

      allow delete: if request.auth != null &&
        (exists(/databases/$(database)/documents/admin_roles/$(request.auth.uid)) ? isAdminPanelAdmin() : true);

      allow update: if request.auth != null &&
        (
          // If restoring (has restoredAt field), require admin only
          ('restoredAt' in request.resource.data) ?
            (exists(/databases/$(database)/documents/admin_roles/$(request.auth.uid)) ? isAdminOnly() : false) :
          // Otherwise, allow admin/coordinator (backward compat if no admin_roles)
            (exists(/databases/$(database)/documents/admin_roles/$(request.auth.uid)) ? isAdminPanelAdmin() : true)
        ) &&
        !('password' in request.resource.data) &&
        !('firebasePassword' in request.resource.data);
    }

    // Admin panel role lookup: synced by app so rules can restrict adminusers writes to admins/coordinators.
    match /admin_roles/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    


    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.auth.uid != userId || !isBlocked(userId));
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null &&
        ((request.auth.uid == userId && !isBlocked(userId)) || isAdmin());
    }

    // COMPANIES COLLECTION (admin panel: ensure user is signed in with Firebase Auth before import/save)
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }

    // WEEKLY REPORTS
    match /users/{userId}/weeklyReports/{reportId} {
      allow read, write: if request.auth != null &&
        ((request.auth.uid == userId && !isBlocked(userId)) || isAdmin());
    }

    // OJT LOGS
    match /users/{userId}/ojtLogs/{logId} {
      allow read, write: if request.auth != null &&
        ((request.auth.uid == userId && !isBlocked(userId)) || isAdmin());
    }

    // HIDDEN NOTIFICATIONS
    match /users/{userId}/hiddenNotifications/{notificationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
    }

    // HELP DESK FILES - CHANGED: Allow any authenticated user
    match /helpDeskFiles/{fileId} {
      allow read: if isSignedIn();
      // Allow any authenticated user to create (for now)
      allow create, update, delete: if isSignedIn();
    }

    // ADMIN FILES
    match /admin_files/{docId} {
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid || isAdmin()
      );
      allow read, update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
    }

    // DELETED STUDENTS
    match /deleted_students/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if request.auth != null; // Allow delete for restore functionality
      allow update: if false; // Never allow updates
    }

    // DELETED COMPANIES
    match /deleted_companies/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if request.auth != null; // Allow delete for restore functionality
      allow update: if false; // Never allow updates
    }

    // ADMIN DELETIONS HISTORY
    match /admin_deletions/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if false;
      // Allow delete only for admins (for restore functionality)
      allow delete: if request.auth != null &&
        (exists(/databases/$(database)/documents/admin_roles/$(request.auth.uid)) ? isAdminOnly() : false);
    }

    // REJECTED REQUIREMENTS ARCHIVE
    match /rejected_requirements/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false; // Archive records should not be modified or deleted
    }

    // NOTIFICATIONS
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
    }

    // REQUIREMENTS
    match /users/{userId}/requirements/{requirementId} {
      allow read, write: if request.auth != null &&
        ((request.auth.uid == userId && !isBlocked(userId)) || isAdmin());
    }

    // REQUIREMENT APPROVALS
    // Blocked students cannot read their own approval doc; admins can always read/write
    match /requirement_approvals/{studentId} {
      allow read: if request.auth != null &&
        (request.auth.uid != studentId || !isBlocked(request.auth.uid));
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // TEACHER SIGNATURES
    // Teachers can read/write their own signature
    // All authenticated users can read (for signature lookup during approval)
    match /teacher_signatures/{teacherId} {
      allow read: if request.auth != null;
      // Allow users to write their own signature (teacherId must match auth.uid)
      allow write: if request.auth != null && request.auth.uid == teacherId;
    }

    // CHECKLIST TEMPLATES
    // Admins and coordinators can create/update
    // All authenticated users can read
    match /checklist_templates/{templateId} {
      allow read: if request.auth != null;
      // Allow admins and coordinators to create/update
      // Note: App logic should verify coordinator role
      allow create, update, delete: if request.auth != null;
    }

    // ACTIVITY LOGS
    // Allow authenticated users to create and read activity logs (for audit trail)
    // App logic determines who can view via ProtectedRoute
    // Note: Requires Firestore index on activity_logs collection: timestamp (descending)
    match /activity_logs/{logId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update, delete: if false; // Activity logs should not be modified or deleted
    }

    // APPLICATIONS
    // Blocked students cannot read/update their own applications.
    match /applications/{applicationId} {
      allow read: if request.auth != null &&
        (resource.data.userId != request.auth.uid || !isBlocked(request.auth.uid));
      allow create: if request.auth != null && (
        (request.resource.data.userId is string &&
          request.resource.data.userId == request.auth.uid &&
          !isBlocked(request.auth.uid)) ||
        isAdmin()
      );
      allow update: if request.auth != null &&
        (resource.data.userId != request.auth.uid || !isBlocked(request.auth.uid));
      allow delete: if request.auth != null;
    }

    // META collection
    match /meta/{docId} {
      // Allow read for everyone (skills/fields suggestions)
      allow read: if true;
      // Write: any authenticated user (Settings > Platform Data is admin-only in app; admin panel users sign in via Firebase Auth)
      allow write: if request.auth != null;
    }

    // COLLEGES collection
    match /colleges/{collegeId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // PROGRAMS collection
    match /programs/{programId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // STUDENT GUIDE STEPS
    // Guide steps are only edited via the admin panel.
    // Allow any authenticated user (admin panel account) to manage them.
    match /resource_steps/{stepId} {
      // Any signedâ€‘in user can read steps
      allow read: if request.auth != null;

      // Admin panel accounts manage steps; rely on app-side role checks
      allow create, update, delete: if request.auth != null;
    }

    // Default: everything else denied
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
