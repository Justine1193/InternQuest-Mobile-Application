rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ADMIN USERS
    match /adminusers/{adminId} {
      // Read: Allow authenticated users to read (filtering happens in app logic)
      allow read: if request.auth != null;
      
      // Create: Allow authenticated users to create admin accounts
      // PIN verification is enforced at app level and Cloud Functions level
      allow create: if request.auth != null &&
        // Prevent password storage in Firestore - passwords only in Firebase Auth
        !('password' in request.resource.data) &&
        !('firebasePassword' in request.resource.data);
      
      // Delete: Allow authenticated users to delete
      // PIN verification and role checks enforced at app level
      allow delete: if request.auth != null;
      
      // Update: Allow authenticated users to update
      // PIN verification enforced at app level for sensitive operations
      allow update: if request.auth != null &&
        // Prevent password storage in Firestore - passwords only in Firebase Auth
        !('password' in request.resource.data) &&
        !('firebasePassword' in request.resource.data);
    }
    
    // PIN Verification Status Collection
    // Stores PIN verification status keyed by email for rule checking
    match /pin_verifications/{email} {
      allow read: if request.auth != null && request.auth.token.email == email;
      allow write: if request.auth != null && request.auth.token.email == email;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == userId || isAdmin());
    }

    // COMPANIES COLLECTION
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }

    // WEEKLY REPORTS
    match /users/{userId}/weeklyReports/{reportId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == userId || isAdmin());
    }

    // OJT LOGS
    match /users/{userId}/ojtLogs/{logId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == userId || isAdmin());
    }

    // HIDDEN NOTIFICATIONS
    match /users/{userId}/hiddenNotifications/{notificationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
    }

    // HELP DESK FILES - CHANGED: Allow any authenticated user
    match /helpDeskFiles/{fileId} {
      allow read: if isSignedIn();
      // Allow any authenticated user to create (for now)
      allow create, update, delete: if isSignedIn();
    }

    // ADMIN FILES
    match /admin_files/{docId} {
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid || isAdmin()
      );
      allow read, update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
    }

    // DELETED STUDENTS
    match /deleted_students/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if request.auth != null; // Allow delete for restore functionality
      allow update: if false; // Never allow updates
    }

    // DELETED COMPANIES
    match /deleted_companies/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if request.auth != null; // Allow delete for restore functionality
      allow update: if false; // Never allow updates
    }

    // ADMIN DELETIONS HISTORY
    match /admin_deletions/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // REJECTED REQUIREMENTS ARCHIVE
    match /rejected_requirements/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false; // Archive records should not be modified or deleted
    }

    // NOTIFICATIONS
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
    }

    // REQUIREMENTS
    match /users/{userId}/requirements/{requirementId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == userId || isAdmin());
    }

    // REQUIREMENT APPROVALS
    // Allow authenticated users to read (students can see their approval status)
    // Allow authenticated users to write (app logic ensures only advisers/coordinators can approve)
    match /requirement_approvals/{studentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // TEACHER SIGNATURES
    // Teachers can read/write their own signature
    // All authenticated users can read (for signature lookup during approval)
    match /teacher_signatures/{teacherId} {
      allow read: if request.auth != null;
      // Allow users to write their own signature (teacherId must match auth.uid)
      allow write: if request.auth != null && request.auth.uid == teacherId;
    }

    // CHECKLIST TEMPLATES
    // Admins and coordinators can create/update
    // All authenticated users can read
    match /checklist_templates/{templateId} {
      allow read: if request.auth != null;
      // Allow admins and coordinators to create/update
      // Note: App logic should verify coordinator role
      allow create, update, delete: if request.auth != null;
    }

    // ACTIVITY LOGS
    // Allow authenticated users to create and read activity logs (for audit trail)
    // App logic determines who can view via ProtectedRoute
    // Note: Requires Firestore index on activity_logs collection: timestamp (descending)
    match /activity_logs/{logId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update, delete: if false; // Activity logs should not be modified or deleted
    }

    // APPLICATIONS
    match /applications/{applicationId} {
      allow read: if request.auth != null && (
        applicationId.matches('^' + request.auth.uid + '_.+$') ||
        (resource.data.userId is string && resource.data.userId == request.auth.uid) ||
        isAdmin()
      );
      allow create: if request.auth != null && (
        (request.resource.data.userId is string &&
          request.resource.data.userId == request.auth.uid) ||
        isAdmin()
      );
      allow update, delete: if request.auth != null && (
        (resource.data.userId is string && resource.data.userId == request.auth.uid) ||
        isAdmin()
      );
    }

    // META collection
    match /meta/{docId} {
      // Allow read for everyone (skills/fields suggestions)
      allow read: if true;
      allow write: if isAdmin();
    }

    // COLLEGES collection
    match /colleges/{collegeId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // PROGRAMS collection
    match /programs/{programId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Default: everything else denied
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
