rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Companies collection - authenticated users can read, only admins can write
    match /companies/{companyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Weekly reports - users can only access their own reports
    match /users/{userId}/weeklyReports/{reportId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Help Desk templates (admin-managed). Templates can be read by any authenticated
    // user (preview/download), but only administrators can create/update/delete.
    match /helpDeskFiles/{fileId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // admin_files stores uploaded file metadata and (sometimes) base64 content.
    // Allow the authenticated owner to create/read/update/delete their own admin_files
    // records; allow administrators full access.
    match /admin_files/{docId} {
      allow create: if request.auth != null && (
        // owner may create a record for themselves OR admin can create on behalf
        request.resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );

      allow read, update, delete: if request.auth != null && (
        // owner or admin can read/update/delete
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Requirements - users can only access their own requirements
    match /users/{userId}/requirements/{requirementId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

