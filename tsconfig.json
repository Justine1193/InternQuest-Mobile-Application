{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-native",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/dist/**",
    "**/build/**",
    "functions/**",
    "tools/**"
  ],
  "extends": "expo/tsconfig.base"
}
